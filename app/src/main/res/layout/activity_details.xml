<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsActivity">

    <ImageView
        android:id="@+id/iv_detail_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Woliur Rahman Khan"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_detail_pic"/>
    <TextView
        android:id="@+id/tv_details_who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="teacher"
        android:layout_below="@id/tv_details_name"
        android:layout_alignRight="@id/tv_details_name"/>
    <TextView
        android:id="@+id/tv_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="id"
        android:textSize="19sp"
        android:layout_below="@id/iv_detail_pic"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/tv_details_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_details_id"
        android:layout_alignLeft="@id/tv_details_id"
        />


</RelativeLayout>